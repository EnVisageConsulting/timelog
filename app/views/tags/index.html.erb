<div class="row">
  <div class="columns">
    <div class="spacer"></div>
    <div class="clearfix">
      <ul class="menu float-left">
        <li><%= link_to fa_icon("plus-circle", text: "Add Tag"), new_tag_path %></li>
        <li><%= deactivated_view_toggle_link %></li>
        <li><%= link_to fa_icon("book", text: "View Projects"), projects_path %></li>
      </ul>
    </div>
    <hr/>
  </div>
</div>

<div class="row">
  <div class="columns">
    <h3><%= 'Deactivated ' if viewing_deactivated? %> Project Tags</h3>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th class="text-center">Edit</th>
        </tr>
      </thead>
      <tbody>
        <% if tag_list.present? %>
          <% tag_list.each do |tag| %>
            <tr>
              <td><%= link_to tag.name, edit_tag_path(tag) %></td>
              <td class="text-center"><%= link_to fa_icon("pencil"), edit_tag_path(tag) %></td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td class="empty" colspan="2">No <%= viewing_deactivated? ? 'deactivated' : 'active' %> tags</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>