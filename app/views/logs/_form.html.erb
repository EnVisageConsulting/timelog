<%= form_for @log do |f| %>
  <%= form_errors @log %>
  <div class="row">
    <div class="columns medium-5">
      <%= f.label :start_at, "Start Date" %>
      <div class="input-group">
        <%= f.text_field :start_at, value: input_datetime(@log.start_at), placeholder: "MM/DD/YYYY HH:MM XM", data: { inputmask: "'alias': 'mm/dd/yyyy hh:mm xm'" }, pattern: '[\d]{1,2}[-\/][\d]{1,2}[-\/][\d]{4} [\d]{1,2}:\d\d [APap][Mm]', title: "MM/DD/YYYY HH:MM XM", class: 'input-group-field datetime' %>
        <div class="input-group-button">
          <%= link_to fa_icon('clock-o', text: "Set Current Time"), 'javascript:void(0);', class: 'button datetime-setter' %>
        </div>
      </div>
    </div>

    <div class="columns medium-5">
      <%= f.label :end_at, "End Date" %>
      <div class="input-group">
        <%= f.text_field :end_at, value: input_datetime(@log.end_at), placeholder: "MM/DD/YYYY HH:MM XM", data: { inputmask: "'alias': 'mm/dd/yyyy hh:mm xm'" }, pattern: '[\d]{1,2}[-\/][\d]{1,2}[-\/][\d]{4} [\d]{1,2}:\d\d [APap][Mm]', title: "MM/DD/YYYY HH:MM XM", class: 'input-group-field datetime' %>
        <div class="input-group-button">
          <%= link_to fa_icon('clock-o', text: "Set Current Time"), 'javascript:void(0);', class: 'button datetime-setter' %>
        </div>
      </div>
    </div>

    <div class="columns medium-2 show-for-medium"><label>Total Hours</label><span class="stat">...</span></div>
  </div>

  <div class="row">
    <div class="columns">
      <fieldset class="fieldset">
        <legend><%= f.label :project_logs, "Log's Projects" %></legend>

        <div id="document_project_logs">
          <%= f.fields_for :project_logs do |ff| %>
            <%= render 'project_log_fields', fields_for: ff %>
          <% end %>
        </div>

        <div class="row">
          <div class="columns large-3 medium-3 small-4"></div>
          <div class="columns large-1 medium-2 small-2"></div>
          <div class="columns large-8 medium-7 small-6">
            <%= link_to_add_project(f, :project_logs) %>
          </div>
        </div>
      </fieldset>
    </div>
  </div>

  <div class="row">
    <div class="columns">
      <%= f.submit "Save and Start a New Log", class: 'button success expanded hollow' %>
    </div>
  </div>

  <div class="row">
    <div class="columns">
      <%= f.submit "Save Log", class: 'button success expanded' %>
    </div>
  </div>
<% end %>

<% unless @log.activated? %>
  <div class="row">
    <div class="columns">
      <%= link_to fa_icon("ban", text: "Cancel Log"), log_path(@log), method: :delete, data: { confirm: "Are you sure?" }, class: 'alert-link' %>
    </div>
  </div>
<% end %>

<div class="spacer"></div>