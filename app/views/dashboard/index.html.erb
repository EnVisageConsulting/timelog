<div class="row">
  <div class="columns">
    <div class="spacer"></div>
    <div class="clearfix">
      <ul class="menu float-left">
        <% if current_user.admin? %>
          <li><%= link_to fa_icon("plus-circle", text: "Add User"), new_user_path %></li>
          <li><%= link_to fa_icon("group", text: "Manage Users"), users_path %></li>
          <li><%= link_to fa_icon("book", text: "View Projects"), projects_path %></li>
          <li><%= link_to fa_icon("line-chart", text: "Reports"), reports_path %></li>
        <% end %>
      </ul>

      <div class="float-right">
        <% if current_log %>
          <%= link_to fa_icon("clock-o", text: "Finish Log"), edit_log_path(current_log), class: 'button no-margin hollow warning' %>
        <% else %>
          <%= link_to fa_icon("clock-o", text: "Start New Log"), logs_path, method: :post, class: 'button no-margin hollow success' %>
        <% end %>
      </div>
    </div>
    <hr/>
  </div>
</div>

<div class="row show-for-medium">
  <div class="columns small-6 text-center">
    <div class="callout primary">
      <div class="spacer show-for-large"></div>
      <h5>Hours Completed</h5>
      <div id="week_hours_count" style="float: left; margin-left: 15%;">
        <h5>This Week</h5>
        <strong class="stat monospaced primary-text" data-hours="<%= current_week_hours %>"></strong>
      </div>
      <div id="day_hours_count" style="float: right; margin-right: 15%;">
        <h5>Today</h5>
        <strong class="stat monospaced primary-text" data-hours="<%= current_day_hours %>"></strong>
      </div>
      <div class="spacer"></div>
      <div class="spacer"></div>
      <div class="spacer"></div>
    </div>
  </div>

  <div class="columns small-6">
    <canvas id="hours_chart"
            style="margin-bottom: 1rem"
            data-chart-labels="<%= hours_chart_labels %>"
            data-chart-values="<%= hours_chart_values %>"></canvas>
  </div>
</div>

<div class="row">
  <div class="columns">
    <%= link_to "View All Logs", user_path(current_user), class: 'float-right' %>
    <h3>Recent Logs</h3>
    <%= render "users/user_log_table", logs: recent_logs %>
    <%= link_to "View All Logs", user_path(current_user), class: 'float-right' %>
  </div>
</div>

<div class="spacer"></div>